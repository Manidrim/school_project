{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Admin Dashboard</h1>
            <p>Welcome, {{ app.user.userIdentifier }}!</p>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Administration Panel</h2>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>User Management</h5>
                        </div>
                        <div class="card-body">
                            <p>Manage application users and permissions.</p>
                            <a href="#" class="btn btn-primary">Manage Users</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Content Management</h5>
                        </div>
                        <div class="card-body">
                            <p>Manage application content and settings.</p>
                            <a href="#" class="btn btn-primary">Manage Content</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 